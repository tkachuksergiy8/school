{% trans_default_domain 'FOSUserBundle' %}

<div class="page-header bordered">
    <h1>{{ 'change_password.submit'|trans }}</h1>
</div>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}                         
<div class="form-group">
    {{ form_row(form.current_password, {attr:{'class':'form-control form-control-lg'}}) }}
</div>  
<div class="form-group">
    {{ form_row(form.plainPassword.first, {attr:{'class':'form-control form-control-lg'}}) }}
</div>
<div class="form-group">
    {{ form_row(form.plainPassword.second, {attr:{'class':'form-control form-control-lg'}}) }}
</div>
<hr>
<div class="form-group action">
    <button type="submit" class="btn btn-lg btn-primary">{{ 'change_password.submit'|trans }}</button>
</div>
{{ form_end(form) }}
