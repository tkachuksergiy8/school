{% trans_default_domain 'FOSUserBundle' %}

<div class="login-form rounded p-4">
    <h1 class="text-center">
        Registration<br>
        <small class="text-muted">for {{ app.request.get('role') }}</small>
    </h1>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_errors(form) }}
    <div class="form-group input-group pt-3">
        {{ form_widget(form.email, {attr:{class:"form-control with-label-placeholder"}}) }}
        {{ form_label(form.email, 'form.email', {'label_attr': {'class': 'col-form-label label-placeholder top'}}) }}
    </div>
    <div class="form-group input-group pt-3">
        {{ form_widget(form.username, {attr:{class:"form-control with-label-placeholder"}}) }}
        {{ form_label(form.username, 'form.username', {'label_attr': {'class': 'col-form-label label-placeholder top'}}) }}
    </div>
    <div class="form-group input-group pt-3">
        {{ form_widget(form.plainPassword.first, {attr:{class:"form-control with-label-placeholder"}}) }}
        {{ form_label(form.plainPassword.first, 'form.password', {'label_attr': {'class': 'col-form-label label-placeholder top'}}) }}
    </div>
    <div class="form-group input-group pt-3">
        {{ form_widget(form.plainPassword.second, {attr:{class:"form-control with-label-placeholder"}}) }}
        {{ form_label(form.plainPassword.second, 'form.password_confirmation', {'label_attr': {'class': 'col-form-label label-placeholder top'}}) }}
    </div>
    <div>
        <input type="submit" class="btn btn-lg btn-block btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
    {{ form_row(form.role, {value:app.request.get('role')}) }}
    {{ form_end(form) }}
</div>